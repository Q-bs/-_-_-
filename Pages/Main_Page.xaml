            </Border>
            <Button Template="{StaticResource ResourceKey=TopMenuBtn}" HorizontalAlignment="Right"
                    Width="auto" Content="Выйти" Margin="0,0,40,0" VerticalAlignment="Center" Click="Exit_Click"/>
        </Grid>

        <Grid Grid.Row="1">
            <Frame x:Name="MyFrame" />
